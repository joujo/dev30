

{% extends "EshopStockBundle:Default:index.html.twig" %}
    {% block container %}
        <div class="page-content">
        <div class="page-header position-relative">
            <h1>
                Tables
                <small>
                    <i class="icon-double-angle-right"></i>
                    Les Evenements
                </small>
            </h1>
        </div><!--/.page-header-->

        <div class="row-fluid">
        <div class="span12">
        <!--PAGE CONTENT BEGINS-->

        <div class="row-fluid">
        <div class="span12">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
            <tr>

                <th>id</th>
                <th>date</th>
                <th>duree</th>
                <th>lieu</th>
                <th>categorie</th>
                <th>supprimer</th>
                <th>modifier</th>


            </thead>

            <tbody>
            {% for evenement in evenements %}
            <tr>




                <td>{{ evenement.id }}</td>
                <td>{{ evenement.date|date("m/d/Y") }}</td>
                <td>{{ evenement.duree }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.categorie.libelle }}</td>
                <td><a href="{{ path("eshop_stock_deleteEve",{'id': evenement.id}) }}" class="btn btn-mini btn-danger">  <i class="icon-trash bigger-120"></i> </a></td>

                <td><a href="{{ path("eshop_stock_updateEve",{'id': evenement.id}) }}" class="btn btn-mini btn-info">  <i class="icon-edit bigger-120"></i> </a>

               {% endfor %}
            </tr>

            <tr>





                <div class="hidden-desktop visible-phone">
                    <div class="inline position-relative">
                        <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-cog icon-only bigger-110"></i>
                        </button>

                        <ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-close">
                            <li>
                                <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
																		<span class="blue">
																			<i class="icon-zoom-in bigger-120"></i>
																		</span>
                                </a>
                            </li>

                            <li>
                                <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
																		<span class="green">
																			<i class="icon-edit bigger-120"></i>
																		</span>
                                </a>
                            </li>

                            <li>
                                <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
																		<span class="red">
																			<i class="icon-trash bigger-120"></i>
																		</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                </td>
            </tr>






            </tbody>
        </table>
    {% endblock %}